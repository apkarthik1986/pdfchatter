<Window x:Class="PdfChatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Chatter - Semantic Search" Height="550" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="PDF Chatter - Ask Questions About Your PDFs" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,5"
                   HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Uses AI-powered semantic search for context-aware answers" 
                   FontSize="11" Foreground="Gray" Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>
        
        <!-- PDF Folder Selection Section -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" x:Name="SelectFolderButton" 
                    Content="ðŸ“ Select PDF Folder" Padding="10,5"
                    FontSize="14" Margin="0,0,10,0"
                    Click="SelectFolderButton_Click"/>
            
            <TextBox Grid.Column="1" x:Name="FolderPathTextBox" 
                     IsReadOnly="True" Padding="5"
                     FontSize="12" VerticalContentAlignment="Center"
                     Text="No folder selected - Select a folder to begin"/>
            
            <TextBlock Grid.Column="2" x:Name="PdfCountText" 
                       Margin="10,0,0,0" VerticalAlignment="Center"
                       FontSize="12" Foreground="Gray"/>
        </Grid>
        
        <!-- Question Input Section -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" x:Name="QuestionTextBox" 
                     Margin="0,0,10,0" Padding="5"
                     FontSize="14" IsEnabled="False"
                     Text="Load PDFs first to ask questions..."
                     GotFocus="QuestionTextBox_GotFocus"/>
            
            <Button Grid.Column="1" x:Name="AskButton" 
                    Content="ðŸ” Ask" Width="80" Padding="10,5"
                    FontSize="14" IsEnabled="False"
                    Click="AskButton_Click"/>
        </Grid>
        
        <!-- Answer Display Section -->
        <GroupBox Grid.Row="4" Margin="0,0,0,10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Answer" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ConfidenceText" Margin="10,0,0,0" 
                               FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
            </GroupBox.Header>
            <ScrollViewer>
                <TextBox x:Name="AnswerTextBox" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True"
                         BorderThickness="0"
                         FontSize="13"
                         Text="Step 1: Click 'Select PDF Folder' to load your PDF files.&#x0a;Step 2: Type your question and click 'Ask'.&#x0a;&#x0a;The AI will find the most relevant passages using semantic search."/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="5">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready - Select a PDF folder to begin"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
